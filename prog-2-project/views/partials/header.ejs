<!-- header -->

<header class="main-header">
		<div class="container">

			<div class="row align-items-center">
				 <div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img src="/images/logo.jpeg">
					</a>
				 </div>
	
				<div class="col-7 col-md-6">
					<form action="/results" method="GET" class="search-form">
						<input type="text" id="search" name="search" placeholder="Search items, collections and accounts" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link" href="/">
						<img src="/images/icon-1.png">
						The World's most popular NFTs catalogue.
					</a>
				</div>
			</div>
	
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
			
			 <!-- if (locals.user && user.id == locals.user.id) {  -->
			<% if (locals.me) { %>
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">All Artworks</a></li>
					<li><a href="/artworks/add">Add artworks</a></li>
				</ul>
	
				<ul class="right-navbar">
					<li><a href="/users/me"> @<%= me.username %></a></li>
					<li><a href="/users/logout"> Log Out </a></li>
				</ul>
			</nav>
			<% } else { %>
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a href="/">All Artworks</a></li>
					<!-- <li><a href="/artworks/add">Add artworks</a></li> -->
				</ul>
				<ul class="right-navbar">
					<li><a href="/users/login"> <i class="fas fa-user"></i>  Log In </a></li>
					<li><a href="/users/register"> <i class="fas fa-solid fa-user-plus"></i>  Register </a></li>
				</ul>
			</nav>
			<% } %>
					
		</div>
	</header>

<!-- header -->
	



