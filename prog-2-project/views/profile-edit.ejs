<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-include('./partials/head', {title:'FINE ART'})%>

<body>
	<!-- Header -->
	<%-include('partials/header-logueado')%>
	<!-- Header -->
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form action="/users/profile">
					<div class="registrando"> 
						<label for="exampleInputEmail1" class="form-label"> Email address</label>
						<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                     <div id="emailHelp" class="form-text"> </div>   
					</div>
					<div class="registrando"> 
						<label for="exampleInputUsername1" class="form-label"> Username </label>
						<input type="username" class="form-control" id="exampleInputUsername1" >   
					</div>
					<div class="registrando"> 
						<label for="exampleInputPassword1" class="form-label"> Password</label>
						<input type="password" class="form-control" id="exampleInputPassword1" >   
					</div>
					<div class="registrando"> 
						<label for="exampleBirthDate1" class="form-label"> Birth Date</label>
						<input type="date" class="form-control" id="exampleBirthDate1" >
					</div>
					<div class="registrando"> 
						<label for="exampleId1" class="form-label"> ID </label>
						<input type="tel" class="form-control" id="exampleId1" >
					</div>
					<div class="registrando"> 
						<label for="exampleProfilePicture1" class="form-label">  Profile picture</label>
						<input type="file" class="form-control" id="exampleProfilePicture1" >
					</div>
					<button type="submit" class="btn btn primary"> Submit and Login! </button>
				</form>
			</h2>
	<!-- footer -->
	<%-include('./partials/footer.ejs')%>
	<!-- /footer -->
</body>	
</html>
