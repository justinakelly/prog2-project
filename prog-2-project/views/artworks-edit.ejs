<!-- head -->
<%-include('./partials/head', {title:'ADD'})%>
<!-- head -->


<body>
	<!-- header -->
	<%-include('partials/header')%>
	<!-- header -->

	<!-- product add -->
	<div class="container products-wrapper">
		<div class="row">

			<div class="form-background">
<% if (locals.error){ %> 
	<div class="alert alert-danger" role="alert">
		<%= error %>
	  </div>
<% }else{ %> 
			<div class="col-12">
				<h2 class="products-title">Edit artworks</h2>
			</div>

			<!-- form -->
			<h2 class="col-14"> 
				<form method="post" enctype="multipart/form-data" action="/artworks/<%= artworks.id %>/edit"> 

					<div class="AddProduct"> 
						<img src="<%= artworks.image %> " alt="">
						<label for="image" class="form-label">Add Image</label>
						<input type="file" class="form-control" name="image" id="image" value="<%= artworks.image%>">
					</div>

					<div class="AddProduct"> 
						<label for="name" class="form-label">Product Name</label>
						<input type="text" class="form-control" id="name" name="name" value="<%= artworks.name%>">   
					</div>

					<div class="AddProduct"> 
						<label for="description" class="form-label">Description </label>
						<input type="text" class="form-control" id="description" name="description" value="<%= artworks.description%>" placeholder="Make sure your description is as representative as possible...">   
					</div>

					<div class="AddProduct"> 
						<label for="date" class="form-label">Upload Date</label>
						<input type="date" class="form-control" id="date" name="date" value="<%= artworks.date%>" >
					</div>
					<input type="hidden" class="form-control" id="user_id" name="user_id" value="<%= artworks.user_id%>" >
					
		
					<button type="submit" class="btn btn primary"> Update artwork </button>
				</form>
			</h2>
			<!-- form -->
		<% } %> 
			</div>
			
		</div>
	</div>
	<!-- product add -->

	<!-- footer -->
	<%-include('./partials/footer.ejs')%>
	<!-- footer -->