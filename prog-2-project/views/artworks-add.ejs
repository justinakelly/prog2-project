<!-- head -->
<%-include('./partials/head', {title:'ADD'})%>
<!-- head -->


<body>
	<!-- header -->
	<%-include('partials/header')%>
	<!-- header -->

	<!-- product add -->
	<div class="container products-wrapper">
		<div class="row">

			<div class="form-background">
	<% if (locals.error){ %> 
	<div class="alert alert-light" role="alert">
		<%= error %> 
	</div>
	<p><a href="/users/login">Login</a></p>
	<p><a href="/users/register">Register</a></p>

	<% } else {%> 
			<div class="col-12">
				<h2 class="products-title">Add artworks</h2>
			</div>

			<!-- form -->
			<h2 class="col-14"> 
				<form method="post" enctype="multipart/form-data" action="/artworks/add"> 

					<div class="AddProduct"> 
						<label for="name" class="form-label">Product Name</label>
						<input type="text" class="form-control" id="name" name="name" >   
					</div>

					<div class="AddProduct"> 
						<label for="description" class="form-label">Description </label>
						<input type="text" class="form-control" id="description" name="description" placeholder="Make sure your description is as representative as possible...">   
					</div>

					 <div class="AddProduct"> 
						<label for="image" class="form-label">Add Image</label>
						<input type="file" class="form-control" name="image" id="image" >
					</div> 
					<% if (locals.noImage){ %> 
						<p><%= noImage %> </p>
					<% }%> 
					<div class="AddProduct"> 
						<label for="date" class="form-label">Upload Date</label>
						<input type="date" class="form-control" id="date" name="date" >
					</div> 
					<% if (locals.noDate){ %> 
						<p><%= noDate %> </p>
					<% }%> 
		
					<button type="submit" class="btn btn primary"> Add artwork </button>
				</form>
			</h2>
			<!-- form -->
			<% } %> 
			</div>
			
		</div>
	</div>
	<!-- product add -->

	<!-- footer -->
	<%-include('./partials/footer.ejs')%>
	<!-- footer -->