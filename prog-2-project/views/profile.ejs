<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%-include('./partials/head', {title:'DIGITAL ART WORLD'})%>

<body>
	<!-- Header -->
	<%-include('partials/header-logueado')%>
	<!-- Header -->
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
						<a href="/users/profile/edit"> <%= user.username  %> 
							<i class="fas fa-cog"></i>
						</a>
					</h1>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i= 0; i < 3; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/artworks/<%= i+1 %> ">
						<figure class="product-box_image">
							<img src="<%= artwork[i].image %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= artwork[i].name %></h2>
							<p><%= artwork[i].description %></p>
							<p>Comentarios:  </p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		
	<!-- /Mis productos -->
	<!-- footer -->
	<%-include('./partials/footer.ejs')%>
	<!-- /footer -->
</body>	
</html>
